{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["../shared/**/*", "src/**/*"],
  "exclude": ["node_modules", "../web", "../shared/types-v3.ts"]
}
